<h1 class="text-2xl font-bold"><i class="fa-solid fa-paperclip mr-2 text-primary"></i>Log in</h1> 

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-control">
    <%= f.label :email, class: "label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered input-base-100" %>
  </div>

  <div class="form-control">
    <%= f.label :password, class: "label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-control">
      <%= f.label :remember_me, class: "label" do %>
        <span class="label-text">Remember me</span>
        <%= f.check_box :remember_me, class: "checkbox" %>
      <% end %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary w-full" %>
  </div>
<% end %>

<div class="mt-4 text-sm text-center">
  <p>Don't have an account? <%= link_to "sign up", new_user_registration_path, class: "underline" %></p>
</div>
